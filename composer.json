{
    "name": "lbhurtado/common",
    "description": "This is a utilities package for lbhurtado/{missive, sms, tactician, engagespak}.",
    "keywords": [
        "lbhurtado",
        "common"
    ],
    "homepage": "https://github.com/lbhurtado/common",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Lester Hurtado",
            "email": "lester@hurtado.ph",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.1",
        "illuminate/support": "5.8.*"
    },
    "require-dev": {
        "orchestra/testbench": "3.8.*",
        "phpunit/phpunit": "^7.0"
    },
    "autoload": {
        "psr-4": {
            "LBHurtado\\Common\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "LBHurtado\\Common\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"

    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "LBHurtado\\Common\\CommonServiceProvider"
            ],
            "aliases": {
                "Common": "LBHurtado\\Common\\CommonFacade"
            }
        }
    }
}
